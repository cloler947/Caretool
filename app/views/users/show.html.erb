<h1>マイページ</h1>

<table>
	<tbody>
		<tr>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<td><%= attachment_image_tag(@user, :pro_image, :fill, 100, 100, fallback: "登録のピクトアイコン1.jpeg", size: "50x50") %></td>
		</tr>
	</tbody>
</table>

<%= link_to "フォローしているユーザー", user_follows_path(@user) %>
<%= link_to "フォロワー", user_followers_path(@user) %>

<!-- フォローボタン -->
<% if current_user != @user %>
	<% if current_user.following?(@user) %>
		<%= link_to 'フォローを外す', user_relationships_path(@user.id), method: :delete %>
	<% else %>
		<%= link_to 'フォローする', user_relationships_path(@user.id), method: :post %>
	<% end %>
<% end %>

<% if current_user == @user %>
	<%= link_to "登録情報の変更", edit_user_path(@user) %>
<% end %>


